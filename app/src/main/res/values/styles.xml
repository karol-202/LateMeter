<resources>
	<style name="AppTheme" parent="Theme.AppCompat.Light">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorSecondary</item>
		<item name="colorError">@color/colorError</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
	</style>

	<style name="AppTheme.ImageButton.Borderless" parent="Widget.AppCompat.ImageButton">
		<item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
	</style>

	<style name="AppTheme.TextAppearance.Lateness" parent="TextAppearance.MaterialComponents.Headline2">
		<item name="android:textColor">?attr/colorAccent</item>
	</style>
	
	<style name="AppTheme.TextAppearance.TeacherStats.Value" parent="TextAppearance.MaterialComponents.Headline4">
		<item name="android:textColor">@color/text_primary</item>
	</style>
</resources>
